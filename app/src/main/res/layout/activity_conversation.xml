            <!--android:id="@+id/message_compose_view_container"-->
            <!--layout="@layout/view_compose_message"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>